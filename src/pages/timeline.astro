<script is:inline define:vars={{ entitySessionsJSON, entityMetaJSON, base }}>
  document.addEventListener('DOMContentLoaded', () => {
    const entitySessions = JSON.parse(entitySessionsJSON);
    const entityMeta = JSON.parse(entityMetaJSON);
    const body = document.body;
    const nodes = document.querySelectorAll('.tl-node');
    const chapters = document.querySelectorAll('.tl-chapter');

    // --- Category filters ---
    document.querySelectorAll('.tl-filter[data-cat]').forEach(btn => {
      btn.addEventListener('click', () => {
        btn.classList.toggle('active');
        body.classList.toggle('tl-hide-' + btn.dataset.cat, !btn.classList.contains('active'));
      });
    });

    // --- Overflow debut expansion (toggleable) ---
    document.querySelectorAll('.tl-chip--overflow').forEach(btn => {
      let expanded = false;
      btn.addEventListener('click', (e) => {
        e.stopPropagation();
        const sid = btn.dataset.overflow;
        const items = document.querySelectorAll('[data-overflow-item="' + sid + '"]');
        expanded = !expanded;
        items.forEach(c => c.classList.toggle('tl-chip--revealed', expanded));
        const count = items.length;
        btn.textContent = expanded ? 'Show less' : '+' + count + ' more';
      });
    });

    // --- Session expand/collapse ---
    document.querySelectorAll('.tl-node-toggle').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.stopPropagation();
        const sid = btn.dataset.expand;
        const detail = document.querySelector('[data-detail="' + sid + '"]');
        if (!detail) return;
        const isOpen = !detail.hidden;
        detail.hidden = isOpen;
        btn.classList.toggle('tl-node-toggle--open', !isOpen);
      });
    });

    // Density bar also toggles expand
    document.querySelectorAll('.tl-density').forEach(bar => {
      bar.addEventListener('click', (e) => {
        e.stopPropagation();
        const node = bar.closest('.tl-node');
        if (!node) return;
        const btn = node.querySelector('.tl-node-toggle');
        if (btn) btn.click();
      });
    });

    // --- Entity highlight mode ---
    let activeEntity = null;

    function clearHighlight() {
      activeEntity = null;
      body.classList.remove('tl-entity-mode');
      nodes.forEach(n => n.classList.remove('tl-node--matched'));
      chapters.forEach(c => c.classList.remove('tl-chapter--empty'));
      document.getElementById('tl-entity-badge').hidden = true;
      document.getElementById('tl-sidebar-nav').hidden = false;
      document.getElementById('tl-sidebar-entity').hidden = true;
      document.getElementById('tl-entity-session-list').innerHTML = '';
      var bs = document.getElementById('tl-bottomsheet');
      if (bs) bs.hidden = true;
    }

    function highlightEntity(slug) {
      if (activeEntity === slug) { clearHighlight(); return; }
      activeEntity = slug;
      var meta = entityMeta[slug];
      if (!meta) return;

      body.classList.add('tl-entity-mode');

      // Mark matching nodes
      var sessions = entitySessions[slug] || [];
      var sessionSet = new Set(sessions);
      nodes.forEach(n => {
        n.classList.toggle('tl-node--matched', sessionSet.has(n.dataset.session));
      });

      // Hide chapters with no matching sessions
      chapters.forEach(ch => {
        var hasMatch = false;
        ch.querySelectorAll('.tl-node').forEach(n => {
          if (n.classList.contains('tl-node--matched')) hasMatch = true;
        });
        ch.classList.toggle('tl-chapter--empty', !hasMatch);
      });

      // Badge
      document.getElementById('tl-entity-badge-name').textContent = meta.title;
      document.getElementById('tl-entity-badge').hidden = false;

      // Sidebar
      document.getElementById('tl-sidebar-nav').hidden = true;
      var panel = document.getElementById('tl-sidebar-entity');
      panel.hidden = false;
      document.getElementById('tl-entity-name').textContent = meta.title;
      var catEl = document.getElementById('tl-entity-cat');
      catEl.textContent = meta.category;
      catEl.dataset.cat = meta.category;
      document.getElementById('tl-entity-desc').textContent = meta.description || '';
      document.getElementById('tl-entity-sessions').textContent = 'Appears in ' + sessions.length + ' session' + (sessions.length !== 1 ? 's' : '');

      // Session list in sidebar
      var listEl = document.getElementById('tl-entity-session-list');
      listEl.innerHTML = '';
      sessions.forEach(function(sid) {
        var node = document.querySelector('[data-session="' + sid + '"]');
        if (!node) return;
        var title = node.querySelector('.tl-node-title');
        var label = node.querySelector('.tl-node-label');
        var a = document.createElement('a');
        a.className = 'tl-entity-session-link';
        a.href = '#' + sid;
        a.textContent = (label ? label.textContent : '') + ' ' + (title ? title.textContent : sid);
        a.addEventListener('click', function(e) {
          e.preventDefault();
          node.scrollIntoView({ behavior: 'smooth', block: 'center' });
        });
        listEl.appendChild(a);
      });

      document.getElementById('tl-entity-link').href = base + '/wiki/' + slug + '/';

      // Bottom sheet (mobile)
      if (window.innerWidth < 1024) {
        var bs = document.getElementById('tl-bottomsheet');
        bs.hidden = false;
        document.getElementById('tl-bs-name').textContent = meta.title;
        var bsCat = document.getElementById('tl-bs-cat');
        bsCat.textContent = meta.category;
        bsCat.dataset.cat = meta.category;
        document.getElementById('tl-bs-desc').textContent = meta.description || '';
        document.getElementById('tl-bs-sessions').textContent = 'Appears in ' + sessions.length + ' session' + (sessions.length !== 1 ? 's' : '');
        document.getElementById('tl-bs-link').href = base + '/wiki/' + slug + '/';
      }
    }

    // Chip click handlers (both debut chips and detail panel chips)
    document.querySelectorAll('.tl-chip[data-entity]').forEach(chip => {
      chip.addEventListener('click', (e) => {
        e.stopPropagation();
        highlightEntity(chip.dataset.entity);
      });
    });

    // Clear handlers
    document.getElementById('tl-entity-badge-clear').addEventListener('click', clearHighlight);
    document.getElementById('tl-sidebar-back').addEventListener('click', clearHighlight);
    var bsClose = document.getElementById('tl-bottomsheet-close');
    if (bsClose) bsClose.addEventListener('click', clearHighlight);
    var bs = document.getElementById('tl-bottomsheet');
    if (bs) bs.addEventListener('click', function(e) { if (e.target === bs) clearHighlight(); });

    // Escape key to clear
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && activeEntity) { clearHighlight(); }
    });

    // --- Chapter nav ---
    var sections = document.querySelectorAll('.tl-chapter');
    var links = document.querySelectorAll('.tl-chapter-link');
    if (!sections.length || !links.length) return;

    links.forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        var target = document.querySelector(link.getAttribute('href'));
        if (target) target.scrollIntoView({ behavior: 'smooth', block: 'start' });
      });
    });

    var activeChapter = null;
    var observer = new IntersectionObserver((entries) => {
      for (var entry of entries) {
        if (entry.isIntersecting) {
          var ch = entry.target.dataset.chapter;
          if (ch !== activeChapter) {
            activeChapter = ch;
            links.forEach(l => {
              l.classList.toggle('active', l.dataset.chapterLink === ch);
            });
          }
        }
      }
    }, { rootMargin: '-20% 0px -60% 0px' });

    sections.forEach(s => observer.observe(s));
  });
</script>
