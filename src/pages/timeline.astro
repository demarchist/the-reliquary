    font-variant-numeric: tabular-nums;
    min-width: 1.5rem;
    z-index: 1;
  }

  .tl-chapter-name { z-index: 1; }

  .tl-chapter-bar {
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    background: var(--color-parchment-200);
    border-radius: 0.25rem;
    opacity: 0.5;
    z-index: 0;
    transition: opacity 0.15s;
  }

  .tl-chapter-link:hover .tl-chapter-bar,
  .tl-chapter-link.active .tl-chapter-bar {
