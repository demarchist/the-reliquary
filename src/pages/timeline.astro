    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  @media (min-width: 1024px) {
    .tl-layout {
      display: grid;
      grid-template-columns: 1fr 240px;
      gap: 2rem;
    }
  }

  /* ===== Sidebar ===== */
  .tl-sidebar { display: none; }

  @media (min-width: 1024px) {
    .tl-sidebar {
      display: block;
      background: var(--color-parchment-100);
      border-radius: 0.5rem;
      padding: 1rem;
      position: sticky;
      top: 5rem;
      align-self: start;
      max-height: calc(100vh - 7rem);
      overflow-y: auto;
    }
  }

  .tl-sidebar-heading {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-ink-400);
    margin-bottom: 0.75rem;
  }

  .tl-chapter-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .tl-chapter-link {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.8125rem;
    line-height: 1.4;
    color: var(--color-ink-500);
    text-decoration: none;
    transition: background-color 0.15s, color 0.15s;
    position: relative;
    overflow: hidden;
  }

  .tl-chapter-link:hover {
    background: var(--color-parchment-200);
    color: var(--color-ink-800);
    text-decoration: none;
  }

  .tl-chapter-link.active {
