      overflow-y: auto;
      position: relative;
    }

    .tl-bottomsheet-close {
      position: absolute;
      top: 0.75rem;
      right: 0.75rem;
      background: none;
      border: none;
      font-size: 1.25rem;
      color: var(--color-ink-400);
      cursor: pointer;
    }
  }

  /* ===== Scroll-driven reveal ===== */
  @supports (animation-timeline: view()) {
    .tl-node, .tl-milestone {
      animation: tl-reveal linear both;
      animation-timeline: view();
      animation-range: entry 0% entry 25%;
    }

    @keyframes tl-reveal {
      from {
        opacity: 0;
        transform: translateY(0.75rem);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Don't let scroll animation fight with entity highlight dimming */
    :global(body.tl-entity-mode) .tl-node {
      animation: none;
    }
  }
</style>

<script is:inline define:vars={{ entitySessionsJSON, entityMetaJSON, base }}>
  document.addEventListener('DOMContentLoaded', () => {
    const entitySessions = JSON.parse(entitySessionsJSON);
    const entityMeta = JSON.parse(entityMetaJSON);
    const body = document.body;
    const nodes = document.querySelectorAll('.tl-node');
    const nodeMap = new Map();
    nodes.forEach(n => {
      const entities = (n.dataset.entities || '').split(',').filter(Boolean);
      nodeMap.set(n, entities);
    });

    // --- Category filters ---
    document.querySelectorAll('.tl-filter[data-cat]').forEach(btn => {
      btn.addEventListener('click', () => {
        const cat = btn.dataset.cat;
        btn.classList.toggle('active');
        body.classList.toggle('tl-hide-' + cat, !btn.classList.contains('active'));
      });
    });

    // --- Overflow debut expansion ---
    document.querySelectorAll('.tl-chip--overflow').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.stopPropagation();
        const sid = btn.dataset.overflow;
        document.querySelectorAll(`[data-overflow-item="${sid}"]`).forEach(c => {
          c.classList.add('tl-chip--revealed');
        });
        btn.style.display = 'none';
      });
    });

    // --- Entity highlight mode ---
    let activeEntity = null;

    function clearHighlight() {
      activeEntity = null;
      body.classList.remove('tl-entity-mode');
      nodes.forEach(n => n.classList.remove('tl-node--matched'));
      document.getElementById('tl-entity-badge').hidden = true;
      document.getElementById('tl-sidebar-nav').hidden = false;
      document.getElementById('tl-sidebar-entity').hidden = true;
      const bs = document.getElementById('tl-bottomsheet');
      if (bs) bs.hidden = true;
    }

    function highlightEntity(slug) {
      if (activeEntity === slug) { clearHighlight(); return; }
      activeEntity = slug;
      const meta = entityMeta[slug];
      if (!meta) return;

      body.classList.add('tl-entity-mode');

      // Mark matching nodes
      const sessions = entitySessions[slug] || [];
      const sessionSet = new Set(sessions);
      nodes.forEach(n => {
        n.classList.toggle('tl-node--matched', sessionSet.has(n.dataset.session));
      });

      // Badge in filter bar
      const badge = document.getElementById('tl-entity-badge');
      document.getElementById('tl-entity-badge-name').textContent = meta.title;
      badge.hidden = false;

      // Sidebar entity detail (desktop)
      document.getElementById('tl-sidebar-nav').hidden = true;
      const panel = document.getElementById('tl-sidebar-entity');
      panel.hidden = false;
      document.getElementById('tl-entity-name').textContent = meta.title;
      const catEl = document.getElementById('tl-entity-cat');
      catEl.textContent = meta.category;
      catEl.dataset.cat = meta.category;
      document.getElementById('tl-entity-desc').textContent = meta.description || '';
      document.getElementById('tl-entity-sessions').textContent = 'Appears in ' + sessions.length + ' session' + (sessions.length !== 1 ? 's' : '');
      document.getElementById('tl-entity-link').href = base + '/wiki/' + slug + '/';

      // Bottom sheet (mobile)
      if (window.innerWidth < 1024) {
        const bs = document.getElementById('tl-bottomsheet');
        bs.hidden = false;
        document.getElementById('tl-bs-name').textContent = meta.title;
        const bsCat = document.getElementById('tl-bs-cat');
        bsCat.textContent = meta.category;
        bsCat.dataset.cat = meta.category;
        document.getElementById('tl-bs-desc').textContent = meta.description || '';
        document.getElementById('tl-bs-sessions').textContent = 'Appears in ' + sessions.length + ' session' + (sessions.length !== 1 ? 's' : '');
        document.getElementById('tl-bs-link').href = base + '/wiki/' + slug + '/';
      }
    }

    // Chip click handlers
    document.querySelectorAll('.tl-chip[data-entity]').forEach(chip => {
      chip.addEventListener('click', (e) => {
        e.stopPropagation();
        highlightEntity(chip.dataset.entity);
      });
    });

    // Clear handlers
    document.getElementById('tl-entity-badge-clear').addEventListener('click', clearHighlight);
    document.getElementById('tl-sidebar-back').addEventListener('click', clearHighlight);
    const bsClose = document.getElementById('tl-bottomsheet-close');
    if (bsClose) bsClose.addEventListener('click', clearHighlight);
    const bs = document.getElementById('tl-bottomsheet');
    if (bs) bs.addEventListener('click', (e) => { if (e.target === bs) clearHighlight(); });

    // --- Chapter nav: smooth scroll + IntersectionObserver ---
    const sections = document.querySelectorAll('.tl-chapter');
    const links = document.querySelectorAll('.tl-chapter-link');
    if (!sections.length || !links.length) return;

    links.forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const target = document.querySelector(link.getAttribute('href'));
        if (target) target.scrollIntoView({ behavior: 'smooth', block: 'start' });
      });
    });

    let activeChapter = null;
    const observer = new IntersectionObserver((entries) => {
      for (const entry of entries) {
        if (entry.isIntersecting) {
          const ch = entry.target.dataset.chapter;
          if (ch !== activeChapter) {
            activeChapter = ch;
            links.forEach(l => {
              l.classList.toggle('active', l.dataset.chapterLink === ch);
            });
          }
        }
      }
    }, { rootMargin: '-20% 0px -60% 0px' });

    sections.forEach(s => observer.observe(s));
  });
</script>
