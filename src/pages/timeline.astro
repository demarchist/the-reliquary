  .tl-filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 0;
    margin-bottom: 1rem;
    position: sticky;
    top: 0;
    z-index: 20;
