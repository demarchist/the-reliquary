  #tl-entity-badge-clear {
    background: none;
    border: none;
    color: #fff;
    font-size: 1rem;
    cursor: pointer;
    line-height: 1;
    padding: 0 0.125rem;
    opacity: 0.8;
  }

  #tl-entity-badge-clear:hover { opacity: 1; }

  /* ===== Two-column layout ===== */
