  .tl-filter-dot { width: 8px; height: 8px; border-radius: 50%; }
  .tl-filter-dot--people { background: #f59e0b; }
  .tl-filter-dot--places { background: #10b981; }
  .tl-filter-dot--things { background: #0ea5e9; }
  .tl-filter-dot--factions { background: #8b5cf6; }

  .tl-entity-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    margin-left: auto;
    padding: 0.25rem 0.5rem 0.25rem 0.75rem;
