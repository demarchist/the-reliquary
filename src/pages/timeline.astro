---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allDiary = await getCollection('diary');
allDiary.sort((a, b) => {
  if (a.data.chapter !== b.data.chapter) return a.data.chapter - b.data.chapter;
  return a.data.session - b.data.session;
});

const allWiki = await getCollection('wiki');

// --- Build data maps ---

// Debut map: which session each wiki entity first appears in
const debutMap: Map<string, string> = new Map();
for (const w of allWiki) {
  if (w.data.firstAppearance) debutMap.set(w.id, w.data.firstAppearance);
}

// sessionDebuts: which wiki entities debut in each session (for debut chips)
const sessionDebuts: Map<string, { slug: string; title: string; category: string }[]> = new Map();
for (const w of allWiki) {
  if (!w.data.firstAppearance) continue;
  if (!sessionDebuts.has(w.data.firstAppearance)) sessionDebuts.set(w.data.firstAppearance, []);
  sessionDebuts.get(w.data.firstAppearance)!.push({
    slug: w.id,
    title: w.data.title,
    category: w.data.category,
  });
}
const catOrder = { People: 0, Places: 1, Things: 2, Factions: 3, Events: 4 };
for (const [, arr] of sessionDebuts) {
  arr.sort((a, b) => (catOrder[a.category as keyof typeof catOrder] ?? 9) - (catOrder[b.category as keyof typeof catOrder] ?? 9) || a.title.localeCompare(b.title));
}

// entitySessions: which sessions each entity appears in (from diary frontmatter)
const categoryKeys = ['people', 'places', 'things', 'factions', 'events'] as const;
const keyToCategory: Record<string, string> = { people: 'People', places: 'Places', things: 'Things', factions: 'Factions', events: 'Events' };
const entitySessions: Record<string, string[]> = {};
for (const d of allDiary) {
  for (const key of categoryKeys) {
    const slugs = d.data[key];
    if (!slugs) continue;
    for (const slug of slugs) {
      if (!entitySessions[slug]) entitySessions[slug] = [];
      entitySessions[slug].push(d.id);
    }
  }
}

// entityMeta: display info for each entity
const entityMeta: Record<string, { title: string; category: string; description?: string }> = {};
for (const w of allWiki) {
  entityMeta[w.id] = { title: w.data.title, category: w.data.category, description: w.data.description };
}

// sessionEntitiesGrouped: all entities per session, grouped by category, with debut flag
// Used in the expandable detail panel
interface EntityInfo { slug: string; title: string; category: string; debut: boolean; }
const sessionEntitiesGrouped: Map<string, Map<string, EntityInfo[]>> = new Map();
for (const d of allDiary) {
  const grouped: Map<string, EntityInfo[]> = new Map();
  for (const key of categoryKeys) {
    const slugs = d.data[key];
    if (!slugs) continue;
    const cat = keyToCategory[key];
    const list: EntityInfo[] = [];
    for (const slug of slugs) {
      const meta = entityMeta[slug];
      if (!meta) continue;
      list.push({ slug, title: meta.title, category: cat, debut: debutMap.get(slug) === d.id });
    }
    if (list.length > 0) {
      list.sort((a, b) => a.title.localeCompare(b.title));
      grouped.set(cat, list);
    }
  }
  sessionEntitiesGrouped.set(d.id, grouped);
}

const entitySessionsJSON = JSON.stringify(entitySessions);
const entityMetaJSON = JSON.stringify(entityMeta);

// Group diary by chapter
const chapters: Map<number, typeof allDiary> = new Map();
for (const entry of allDiary) {
  const ch = entry.data.chapter;
  if (!chapters.has(ch)) chapters.set(ch, []);
  chapters.get(ch)!.push(entry);
}

function chapterTitle(entries: typeof allDiary): string {
  return entries[0]?.data.chapterTitle || `Chapter ${entries[0]?.data.chapter}`;
}

const base = import.meta.env.BASE_URL.replace(/\/$/, '');

const catCss: Record<string, string> = {
  People: 'people', Places: 'places', Things: 'things', Factions: 'factions', Events: 'events',
};

// Density tiers for heat map dots
function densityTier(total: number): string {
  if (total >= 20) return 'high';
  if (total >= 10) return 'mid';
  return 'low';
}
---

<BaseLayout title="Timeline" wide={true}>
  <h1 class="font-serif text-3xl font-bold text-ink-900 mb-1">Timeline</h1>
  <p class="text-ink-400 mb-4">A chronological record of all sessions across <em>The Rise of Atropos</em>.</p>

  <!-- Category filter bar -->
  <div class="tl-filters" id="tl-filters">
    <button class="tl-filter tl-filter--people active" data-cat="people" type="button">
      <span class="tl-filter-dot tl-filter-dot--people"></span>People
    </button>
    <button class="tl-filter tl-filter--places active" data-cat="places" type="button">
      <span class="tl-filter-dot tl-filter-dot--places"></span>Places
    </button>
    <button class="tl-filter tl-filter--things active" data-cat="things" type="button">
      <span class="tl-filter-dot tl-filter-dot--things"></span>Things
    </button>
    <button class="tl-filter tl-filter--factions active" data-cat="factions" type="button">
      <span class="tl-filter-dot tl-filter-dot--factions"></span>Factions
    </button>
    <div class="tl-entity-badge" id="tl-entity-badge" hidden>
      <span id="tl-entity-badge-name"></span>
      <button type="button" id="tl-entity-badge-clear" aria-label="Clear selection">&times;</button>
    </div>
  </div>

  <!-- Two-column layout -->
  <div class="tl-layout">
    <!-- Main timeline -->
    <div class="tl-main">
      {[...chapters.entries()].map(([chapterNum, entries]) => (
        <section id={`chapter-${chapterNum}`} class="tl-chapter" data-chapter={chapterNum}>
          <div class="chapter-header">
            <span class="chapter-number">Chapter {chapterNum}</span>
            <span class="chapter-title">{chapterTitle(entries)}</span>
            <span class="chapter-count">{entries.length} sessions</span>
          </div>

          <div class="tl-spine">
            {entries.map((entry) => {
              const sessionId = entry.id;
              const debuts = sessionDebuts.get(sessionId) || [];
              const nonEventDebuts = debuts.filter(d => d.category !== 'Events');
              const eventDebuts = debuts.filter(d => d.category === 'Events');
              const grouped = sessionEntitiesGrouped.get(sessionId) || new Map();

              const pCount = entry.data.people?.length || 0;
              const plCount = entry.data.places?.length || 0;
              const tCount = entry.data.things?.length || 0;
              const fCount = entry.data.factions?.length || 0;
              const total = pCount + plCount + tCount + fCount;

              const allSlugs = [
                ...(entry.data.people || []),
                ...(entry.data.places || []),
                ...(entry.data.things || []),
                ...(entry.data.factions || []),
                ...(entry.data.events || []),
              ];

              return (
                <>
                  {/* Event milestone banners */}
                  {eventDebuts.map((ev) => (
                    <div class="tl-milestone">
                      <div class="tl-milestone-inner">
                        <span class="tl-milestone-label font-mono">Ch.{entry.data.chapter}/S{entry.data.session}</span>
                        <a href={`${base}/wiki/${ev.slug}/`} class="tl-milestone-title">{ev.title}</a>
                        {entityMeta[ev.slug]?.description && (
                          <p class="tl-milestone-desc">{entityMeta[ev.slug].description}</p>
                        )}
                      </div>
                    </div>
                  ))}

                  <div
                    class={`tl-node tl-node--density-${densityTier(total)}`}
                    data-session={sessionId}
                    data-entities={allSlugs.join(',')}
                  >
                    <div class="tl-node-dot"></div>
                    <div class="tl-node-content">
                      {/* Row 1: label + title + expand toggle */}
                      <div class="tl-node-header">
                        <span class="tl-node-label font-mono">Ch.{entry.data.chapter}/S{entry.data.session}</span>
                        <a href={`${base}/diary/${sessionId}/`} class="tl-node-title">{entry.data.title}</a>
                        {total > 0 && (
                          <button class="tl-node-toggle" type="button" data-expand={sessionId} aria-label="Expand session details" title="Show all entities">
                            <svg width="12" height="12" viewBox="0 0 12 12" fill="none"><path d="M4 2l4 4-4 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
                          </button>
                        )}
                      </div>

                      {/* Row 2: density bar */}
                      {total > 0 && (
                        <div class="tl-density" title={`${pCount} people, ${plCount} places, ${tCount} things, ${fCount} factions`}>
                          {pCount > 0 && <div class="tl-density-seg tl-density-seg--people" style={`flex:${pCount}`}></div>}
                          {plCount > 0 && <div class="tl-density-seg tl-density-seg--places" style={`flex:${plCount}`}></div>}
                          {tCount > 0 && <div class="tl-density-seg tl-density-seg--things" style={`flex:${tCount}`}></div>}
                          {fCount > 0 && <div class="tl-density-seg tl-density-seg--factions" style={`flex:${fCount}`}></div>}
                        </div>
                      )}

                      {/* Row 3: debut chips */}
                      {nonEventDebuts.length > 0 && (
                        <div class="tl-debuts">
                          <span class="tl-debuts-label">Debuts</span>
                          {nonEventDebuts.slice(0, 4).map((d) => (
                            <button
                              class={`tl-chip tl-chip--${catCss[d.category]} tl-chip--debut`}
                              data-entity={d.slug}
                              type="button"
                              title={`${d.title} — first appearance`}
                            >
                              <span class="tl-chip-star">&#10038;</span>{d.title}
                            </button>
                          ))}
                          {nonEventDebuts.length > 4 && (
                            <button class="tl-chip tl-chip--overflow" type="button" data-overflow={sessionId}>
                              +{nonEventDebuts.length - 4} more
                            </button>
                          )}
                          {nonEventDebuts.length > 4 && nonEventDebuts.slice(4).map((d) => (
                            <button
                              class={`tl-chip tl-chip--${catCss[d.category]} tl-chip--debut tl-chip--hidden`}
                              data-entity={d.slug}
                              data-overflow-item={sessionId}
                              type="button"
                              title={`${d.title} — first appearance`}
                            >
                              <span class="tl-chip-star">&#10038;</span>{d.title}
                            </button>
                          ))}
                        </div>
                      )}

                      {/* Expandable detail panel */}
                      <div class="tl-detail" data-detail={sessionId} hidden>
                        {entry.data.summary && (
                          <p class="tl-detail-summary">{entry.data.summary}</p>
                        )}
                        <div class="tl-detail-entities">
                          {(['People', 'Places', 'Things', 'Factions'] as const).map(cat => {
                            const entities = grouped.get(cat);
                            if (!entities) return null;
                            return (
                              <div class={`tl-detail-group tl-detail-group--${catCss[cat]}`}>
                                <span class="tl-detail-cat-label">{cat}</span>
                                <div class="tl-detail-chips">
                                  {entities.map(e => (
                                    <button
                                      class={`tl-chip tl-chip--${catCss[cat]}${e.debut ? ' tl-chip--debut' : ''}`}
                                      data-entity={e.slug}
                                      type="button"
                                      title={e.debut ? `${e.title} — first appearance` : e.title}
                                    >
                                      {e.debut && <span class="tl-chip-star">&#10038;</span>}{e.title}
                                    </button>
                                  ))}
                                </div>
                              </div>
                            );
                          })}
                        </div>
                        <a href={`${base}/diary/${sessionId}/`} class="tl-detail-link">Read full entry &rarr;</a>
                      </div>
                    </div>
                  </div>
                </>
              );
            })}
          </div>
        </section>
      ))}
    </div>

    <!-- Right sidebar -->
    <aside class="tl-sidebar" id="tl-sidebar">
      <div id="tl-sidebar-nav">
        <h2 class="tl-sidebar-heading">Chapters</h2>
        <ul class="tl-chapter-list">
          {[...chapters.entries()].map(([chapterNum, entries]) => {
            const sessionCount = entries.length;
            const maxSessions = Math.max(...[...chapters.values()].map(e => e.length));
            const barWidth = Math.round((sessionCount / maxSessions) * 100);
            return (
              <li>
                <a href={`#chapter-${chapterNum}`} class="tl-chapter-link" data-chapter-link={chapterNum}>
                  <span class="tl-chapter-num">{chapterNum}.</span>
                  <span class="tl-chapter-name">{chapterTitle(entries)}</span>
                  <span class="tl-chapter-bar" style={`width:${barWidth}%`}></span>
                </a>
              </li>
            );
          })}
        </ul>
      </div>

      <div id="tl-sidebar-entity" hidden>
        <button type="button" id="tl-sidebar-back" class="tl-sidebar-back">&larr; Chapters</button>
        <div class="tl-entity-detail">
          <h3 id="tl-entity-name" class="tl-entity-name"></h3>
          <span id="tl-entity-cat" class="tl-entity-cat"></span>
          <p id="tl-entity-desc" class="tl-entity-desc"></p>
          <p id="tl-entity-sessions" class="tl-entity-sessions"></p>
          <div id="tl-entity-session-list" class="tl-entity-session-list"></div>
          <a id="tl-entity-link" href="#" class="tl-entity-wiki-link">View wiki entry &rarr;</a>
        </div>
      </div>
    </aside>
  </div>

  <!-- Mobile entity bottom sheet -->
  <div class="tl-bottomsheet" id="tl-bottomsheet" hidden>
    <div class="tl-bottomsheet-inner">
      <button type="button" id="tl-bottomsheet-close" class="tl-bottomsheet-close">&times;</button>
      <h3 id="tl-bs-name" class="tl-entity-name"></h3>
      <span id="tl-bs-cat" class="tl-entity-cat"></span>
      <p id="tl-bs-desc" class="tl-entity-desc"></p>
      <p id="tl-bs-sessions" class="tl-entity-sessions"></p>
      <a id="tl-bs-link" href="#" class="tl-entity-wiki-link">View wiki entry &rarr;</a>
    </div>
  </div>
</BaseLayout>

