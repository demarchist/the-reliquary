    font-size: 0.75rem;
    color: var(--color-ink-400);
    margin: 0 0 0.5rem;
  }

  .tl-entity-session-list {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
    margin-bottom: 0.75rem;
    max-height: 200px;
    overflow-y: auto;
  }

  .tl-entity-session-link {
    font-size: 0.75rem;
    color: var(--color-ink-500);
    text-decoration: none;
    padding: 0.125rem 0;
  }

  .tl-entity-session-link:hover {
    color: var(--color-accent-600);
  }

  .tl-entity-wiki-link {
    font-size: 0.8125rem;
    color: var(--color-accent-600);
    text-decoration: none;
    font-weight: 500;
  }

  .tl-entity-wiki-link:hover { text-decoration: underline; }

  /* ===== Chapter headers ===== */
  .chapter-header {
    display: flex;
    align-items: baseline;
    gap: 0.75rem;
    padding: 1rem 0 0.5rem;
    margin-bottom: 0.5rem;
    border-bottom: 1px solid var(--color-parchment-300);
    transition: opacity 0.2s;
  }

  .chapter-number {
    font-family: var(--font-serif);
    font-size: 0.875rem;
    font-weight: 700;
    color: var(--color-ink-400);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .chapter-title {
    font-family: var(--font-serif);
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-ink-900);
  }

  .chapter-count {
    font-size: 0.75rem;
    color: var(--color-ink-300);
    margin-left: auto;
  }

  /* ===== Spine ===== */
  .tl-spine {
    position: relative;
    padding: 1rem 0 2rem 2rem;
  }

  .tl-spine::before {
    content: '';
    position: absolute;
    left: 0.5rem;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--color-parchment-300);
  }

  /* ===== Session nodes ===== */
  .tl-node {
    position: relative;
    padding: 0.5rem 0;
    transition: opacity 0.25s ease;
  }

  /* Entity mode: hide non-matching nodes */
  :global(body.tl-entity-mode) .tl-node {
    display: none;
  }

  :global(body.tl-entity-mode) .tl-node.tl-node--matched {
    display: block;
  }

  /* Entity mode: hide chapters with no matches */
  :global(body.tl-entity-mode) .tl-chapter.tl-chapter--empty {
    display: none;
  }

  /* Spine accent for matched nodes */
  :global(body.tl-entity-mode) .tl-node.tl-node--matched .tl-node-dot {
    background: var(--color-accent-500);
    border-color: var(--color-accent-700);
    width: 12px;
    height: 12px;
    box-shadow: 0 0 6px rgba(139, 94, 60, 0.4);
  }

  :global(body.tl-entity-mode) .tl-spine::before {
    background: var(--color-accent-500);
    opacity: 0.3;
  }

  /* ===== Heat map dots ===== */
  .tl-node-dot {
    position: absolute;
    border-radius: 50%;
    border: 2px solid var(--color-parchment-200);
    left: -1.5rem;
    top: 0.875rem;
    transform: translateX(-50%);
    z-index: 1;
    transition: all 0.2s;
  }

  .tl-node--density-low .tl-node-dot {
    width: 8px;
    height: 8px;
    background: var(--color-parchment-400);
  }

  .tl-node--density-mid .tl-node-dot {
