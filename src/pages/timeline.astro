    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-ink-900);
    margin: 0 0 0.375rem;
  }

  .tl-entity-cat {
    display: inline-block;
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.125rem 0.5rem;
    border-radius: 9999px;
  }

  .tl-entity-cat[data-cat="People"]   { background: #fef3c7; color: #92400e; }
  .tl-entity-cat[data-cat="Places"]   { background: #d1fae5; color: #065f46; }
