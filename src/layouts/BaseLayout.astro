---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  wide?: boolean;
}

const { title, description = 'A scholarly archive of the Rise of Atropos campaign', wide = false } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet" />
    <title>{title} | The Reliquary</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <Navigation />
    <main class:list={['flex-1 w-full mx-auto px-4 sm:px-6 py-8', wide ? 'max-w-6xl' : 'max-w-4xl']}>
      <slot />
    </main>
    <Footer />
  </body>
</html>
