---
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const currentPath = Astro.url.pathname;

const links = [
  { href: `${base}/`, label: 'Home' },
  { href: `${base}/diary/`, label: 'Campaign Diary' },
  { href: `${base}/wiki/`, label: 'Wiki' },
  { href: `${base}/timeline/`, label: 'Timeline' },
  { href: `${base}/map/`, label: 'Map' },
  { href: `${base}/search/`, label: 'Search' },
];

function isActive(href: string): boolean {
  if (href === `${base}/`) return currentPath === `${base}/`;
  return currentPath.startsWith(href);
}
---

<header class="border-b border-parchment-200 bg-parchment-50/80 backdrop-blur-sm sticky top-0 z-50">
  <nav class="max-w-6xl mx-auto px-4 sm:px-6 flex items-center justify-between h-14">
    <a href={`${base}/`} class="font-serif text-lg font-bold text-ink-900 no-underline hover:text-accent-600 transition-colors">
      The Reliquary
    </a>
    <ul class="flex gap-1 text-sm">
      {links.map(link => (
        <li>
          <a
            href={link.href}
            class:list={[
              'px-3 py-1.5 rounded-md no-underline transition-colors',
              isActive(link.href)
                ? 'bg-parchment-200 text-ink-900 font-medium'
                : 'text-ink-500 hover:text-ink-800 hover:bg-parchment-100',
            ]}
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</header>
